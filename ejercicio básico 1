import java.util.Scanner;

/*
 * Cree un programa donde, el usuario de de grupo 
 * y le de el monto de pago correspondiente
 * si solo hay tres categorias : GRUPO 1 =1000, GRUPO 2 =900, 
 * GRUPO 3=800.
 */

public class EjercicioBasico1 {

	public static void main(String[] args) {
		Scanner entrada=new Scanner(System.in);
		System.out.print("Ingrese de que grupo es:");
		int grupo=entrada.nextInt();
		if(grupo==1)
			System.out.print("Recibes 1000");
		else if(grupo==2)
			System.out.print("Recibes 900");
		else if(grupo==3)
			System.out.print("Recibes 800");
	}

}
